---
const { title } = Astro.props;
---

<section>
  {title && <h2># {title}</h2>}
  <slot />
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 2rem;
  }
  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
    color: #777;
  }
  h2:hover {
    /* box-shadow: 0px 2px 5px 0px #ff9999; */
    color: #ff9999;
  }
</style>
