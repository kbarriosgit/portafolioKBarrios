---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui;
    background: #fff;
    letter-spacing: -0.025rem;
    color: #3f3844;
  }
  body,
  figure {
    margin: 0;
    padding: 0;
  }
  a {
    text-decoration: none;
    color: #777;
  }
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family: system-ui;
  }
  p {
    color: #777;
    font-size: 1rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }
  ul,
  li {
    list-style: none;
  }
  .print {
    display: none;
  }
  @media print {
    .print {
      display: block;
    }
    .no-print {
      display: none !important;
    }
    @page {
      margin-top: 25mm;
      padding: 0;
    }
  }
</style>
